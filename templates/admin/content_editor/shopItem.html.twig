<h3 class="h4">{{item.entity.title}}</h3>
{{item.entity.content|raw}}
<button class="btn btn-info btn-edit" type="button" data-toggle="modal" data-target="#modalForm{{item.entity.id}}">
	<span class="iconify" data-icon="clarity:edit-solid"></span>
</button>

<div class="modal fade" id="modalForm{{item.entity.id}}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Editer le contenu</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				{{form_start(item.form, {'action': path('admin_content_update', {'id' : item.entity.id}), 'method': 'POST', 'attr':{'data-id': item.entity.id, 'data-section' : 'shopItem' ~ item.entity.id }})}}
				{{form_widget(item.form)}}
				<button type="submit" data-toggle="modal" data-target="#modalForm{{item.entity.id}}" aria-expanded="false" aria-controls="collapseExample" class="btn btn-success">Modifier</button>
				<button class="btn btn-darker" type="button" data-toggle="modal" data-target="#modalForm{{item.entity.id}}" aria-expanded="false" aria-controls="collapseExample">Annuler</button>
				{{form_end(item.form)}}
			</div>
		</div>
	</div>
</div>
