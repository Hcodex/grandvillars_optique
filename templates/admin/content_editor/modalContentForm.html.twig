<div class="modal fade" id="modalForm{{item.entity.id}}" tabindex="-1" role="dialog" aria-labelledby="modalForm{{item.entity.id}}" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Editer le contenu</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body">
				{{form_start(item.form, {'action': path('admin_content_update', {'id' : item.entity.id}), 'method': 'POST', 'attr':{'data-id': item.entity.id, 'data-section' : 'content' ~ item.entity.id }})}}
				{% if labels is defined %}
					{{ form_row(item.form.title, {'label': labels.title}) }}
					{{ form_row(item.form.content, {'label': labels.content}) }}
				{% else %}
					{{form_widget(item.form)}}
				{% endif %}
				<button type="submit" data-toggle="modal" data-target="#modalForm{{item.entity.id}}" aria-expanded="false" aria-controls="collapseExample" class="btn btn-success">Modifier</button>
				<button class="btn btn-darker" type="button" data-toggle="modal" data-target="#modalForm{{item.entity.id}}" aria-expanded="false" aria-controls="collapseExample">Annuler</button>
				{{form_end(item.form)}}
			</div>
		</div>
	</div>
</div>
