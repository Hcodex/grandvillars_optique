<div class="col mb-4">
	<div class="card h-100  border-0">
		<div class="text-white text-center">
			<i class="iconify rounded-circle bg-primary p-4" data-icon="{{item.jobItemContent.title}}" data-inline="false" data-width="120px"></i>
		</div>
		<div class="card-body d-flex p-3">
			<h3 class="align-self-center mx-auto text-center font-weight-light font-cursive">{{item.jobItemContent.content|raw}}</h3>
		</div>
		<button class="btn btn-info btn-edit" type="button" data-toggle="modal" data-target="#modaljobitem{{item.jobItemContent.id}}Form">
			<span class="iconify" data-icon="clarity:edit-solid"></span>
		</button>
	</div>
</div>

<div class="modal fade text-darker" id="modaljobitem{{item.jobItemContent.id}}Form" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable modal-xl">
		<div class="modal-content">
			<div class="modal-header">
				<h5 class="modal-title">Editer le contenu</h5>
				<button type="button" class="close" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="modal-body ">
				{{form_start(item.jobItemForm, {'action': path('admin_content_update', {'id' : item.jobItemContent.id}), 'method': 'POST', 'attr':{'data-id': item.jobItemContent.id, 'data-section' : 'jobItem' ~ item.jobItemContent.id }})}}
				{{ form_row(item.jobItemForm.title, {'label': 'Icone'}) }}
				{{ form_row(item.jobItemForm.content, {'label': 'Texte'}) }}
				<button type="submit" data-toggle="modal" data-target="#modaljobitem{{item.jobItemContent.id}}Form" aria-expanded="false" aria-controls="collapseExample" class="btn btn-success">Modifier</button>
				<button class="btn btn-darker" type="button" data-toggle="modal" data-target="#modaljobitem{{item.jobItemContent.id}}Form" aria-expanded="false" aria-controls="collapseExample">Annuler</button>
				{{form_end(item.jobItemForm)}}
			</div>
		</div>
	</div>
</div>
