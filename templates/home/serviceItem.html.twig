{% if  editorMode %}
	{% set itemBorder = 'border-primary' %}
	{% set hrColor =  'bg-primary' %}
	{% set iconColor =  'text-primary' %}
{% endif %}

<div id="content{{item.id}}" class="col mb-4">
	<div class="card h-100 {{itemBorder}}">
		<div class="card-body media">
			<i class="iconify align-self-center mr-3 {{iconColor}} d-none d-sm-block" data-icon="{{item.icon}}" data-inline="false" data-width="50"></i>
			<div class="media-body">
				<div class="row m-0 justify-content-md-center">
					<h3 class="align-self-center col">{{item.title}}
						{% if editorMode and is_granted('ROLE_ADMIN') %}
							<button class="btn btn-info btn-edit" type="button" data-id="{{item.id}}">
								<span class="iconify" data-icon="clarity:edit-solid"></span>
							</button>
						{% endif %}
					</h3>
					{% if loop.last %}
						<button class="col-12 col-sm-6 col-md-4 col-xl-5 btn btn-primary m-0 p-2" data-toggle="modal" data-target="#modalRdv">Prendre rendez-vous</button>
					{% endif %}
					{% if loop.first %}
						<img class="col-4 col-md-2 col-xl-3 d-none d-sm-block" src="{{'/img/essilor.png'|imagine_filter('quote')}}" alt="Activisu">
					{% endif %}
					{% if loop.index == 2 %}
						<img class="col-4 col-md-2 col-xl-3 d-none d-sm-block" src="{{'/img/audio2000.png'|imagine_filter('quote')}}" alt="Activisu">
					{% endif %}
				</div>
				<hr class="{{hrColor}}">
				{{item.content|raw}}
			</div>
		</div>
	</div>
</div>
