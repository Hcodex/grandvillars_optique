<div class="modal fade" id="modalRdv" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			<form>
				<div class="modal-header bg-secondary">
					<h5 class="modal-title" id="exampleModalLabel">Prendre rendez vous</h5>
					<button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
						<span aria-hidden="true">&times;</span>
					</button>
				</div>
				<div class="card-body">

					<div class="tab-content" id="pills-tabContent">

						<div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home-tab">
							<h6>Etape 1/3 : Vos coordonnées</h6>
							<hr>
							<div class="form-group">
								<label for="email">Votre adresse mail</label>
								<input type="email" class="form-control" id="email" aria-describedby="emailHelp">
								<small id="emailHelp" class="form-text text-muted">Votre mail ne sera pas transmis à un tiers</small>
							</div>
							<div class="form-group">
								<label for="name">Votre nom</label>
								<input type="text" class="form-control" id="name" placeholder="">
							</div>
							<div class="form-group">
								<label for="subject">Objet</label>
								<select id="subject" class="custom-select">
									<option value="">--Choisir un service--</option>
									<option value="dog">Contrôler ma vue et choisir mes lunettes</option>
									<option value="cat">Contrôler ma vue</option>
									<option value="hamster">Être conseillé dans le choix de mes lunettes</option>
									<option value="parrot">Être conseillé dans le choix de lunettes pour mon enfant</option>
									<option value="spider">Être accompagné dans la manipulation et l'entretien de mes lentilles</option>
									<option value="goldfish">Retirer mes lunettes en magasin</option>
									<option value="goldfish">Entretenir mes lunettes</option>
								</select>
							</div>
							<a class="btn btn-info float-right tab-btn" href="#pills-slots" role="tab">Suivant</a>
						</div>

						<div class="tab-pane fade" id="pills-slots" role="tabpanel" aria-labelledby="pills-slots-tab">
							<h6>Etape 2/3 : Vos disponibiliés</h6>
							<hr>
							<p class="text-center">
								<span class="iconify text-primary" data-icon="ant-design:info-circle-outlined" data-inline="true"></span>
								Vous pouvez choisir jusqu'à 3 créneaux</p>
							<ul class="nav nav-tabs" id="myTab" role="tablist">
								<li class="nav-item" role="presentation">
									<a class="nav-link text-grey active" id="home-tab" data-toggle="tab" href="#slot1" role="tab" aria-controls="home" aria-selected="true">Créneau 1</a>
								</li>
								<li class="nav-item" role="presentation">
									<a class="nav-link text-grey" id="profile-tab" data-toggle="tab" href="#slot2" role="tab" aria-controls="profile" aria-selected="false">Créneau 2</a>
								</li>
								<li class="nav-item" role="presentation">
									<a class="nav-link text-grey" id="contact-tab" data-toggle="tab" href="#slot3" role="tab" aria-controls="contact" aria-selected="false">Créneau 3</a>
								</li>
							</ul>
							<div class="tab-content my-4" id="myTabContent">
								{%~ for slotNum in 1..3 ~%}
								<div class="tab-pane fade show {% if slotNum == 1 %} active {% endif %}" id="slot{{slotNum}}" role="tabpanel" aria-labelledby="home-tab">
									<div class="d-flex">
										<div class="col-6">
											<div class="list-group text-center selector-list">
												{% for i in 2..8 %}
													{%- set date = "now"|date_modify("+"~ i ~ " day") -%}
													{%-  if date|date("w") != 0 -%}
														<a class="list-group-item list-group-item-action {% if loop.first %}active{% endif %}" data-toggle="list" href="#slot-list-{{slotNum}}-{{i}}" data-list="day-{{slotNum}}" data-slot={{slotNum}} data-daynum={{date|date("w")}}>
														{{- date|format_date(pattern="EEEE d '<br>' MMMM", locale='fr')|raw -}}
														</a>
													{%- endif -%}
												{% endfor %}
											</div>
										</div>

										<div class="col-6">
											<div class="tab-content" id="myTabContent2">
												{%- for i in 2..8 -%}
													{%- set date = "now"|date_modify("+"~ i ~ " day") -%}
													{%- if date|date("w") != 0 -%}
														<div class="tab-pane fade show {% if loop.first %}active{% endif %}" id="slot-list-{{slotNum}}-{{i}}" aria-labelledby="v-pills-home-tab">
															<ul class="list-group text-center selector-list">
																<li class="list-group-item list-group-item-action slot-item {% if date|date(" w") == 1 %}bg-secondary disabled{% endif %}" data-list="hour-{{slotNum}}" data-slot={{slotNum}}>entre <br>8h et 10h</li>
																<li class="list-group-item list-group-item-action slot-item {% if date|date(" w") == 1 %}bg-secondary disabled{% endif %}" data-list="hour-{{ slotNum }}" data-slot={{ slotNum }}>entre <br>10h et 12h</li>
																<li class="list-group-item list-group-item-action slot-item" data-list="hour-{{slotNum}}" data-slot={{slotNum}}>entre <br>14h et 16h</li>
																<li class="list-group-item list-group-item-action slot-item" data-list="hour-{{slotNum}}" data-slot={{slotNum}}>entre <br>16h et 17h</li>
																<li class="list-group-item list-group-item-action slot-item" data-list="hour-{{slotNum}}" data-slot={{slotNum}}>entre <br>17h et 18h</li>
																<li class="list-group-item list-group-item-action slot-item {% if date|date(" w") == 6 %}bg-secondary disabled{% endif %}" data-list="hour-{{slotNum}}" data-slot={{slotNum}}>entre <br>18h et 19h</li>
															</ul>
														</div>
													{%- endif -%}
												{%- endfor -%}
											</div>
										</div>
									</div>
								</div>
							{% endfor %}
						</div>
						<a class="btn btn-dark tab-btn " href="#pills-home" role="tab">Précédent</a>
						<a class="btn btn-info tab-btn float-right" href="#pills-message" role="tab">Suivant</a>
					</div>

					<div class="tab-pane fade" id="pills-message" role="tabpanel" aria-labelledby="pills-message-tab">
						<h6>Etape 3/3 : Recap</h6>
						<hr>
						<p>Vos choix : </p>
						{%~ for slotNum in 1..3 ~%}
						<div class="form-group">
						<input type="text" class="form-control" id="choice-{{slotNum}}" autocomplete="off" placeholder="-">
						</div>
						{% endfor %}
						<p>Message (facultatif) :</p>
						<div class="form-group">
							<textarea id="content" class="form-control" placeholder="Vous pouver laisser un message"></textarea>
						</div>
						<a class="btn btn-dark tab-btn " href="#pills-slots" role="tab">Précédent</a>
						<button type="button" class="btn btn-primary float-right">Envoyer</button>
					</div>
				</div>
			</div>
		</form>
	</div>
</div></div>
