<div class="modal fade" id="modalRdv" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
	<div class="modal-dialog modal-dialog-centered modal-dialog-scrollable">
		<div class="modal-content">
			{{form_start(form2)}}
			<div class="modal-header bg-secondary">
				<h5 class="modal-title" id="exampleModalLabel">Prendre rendez vous</h5>
				<button type="button" class="close text-danger" data-dismiss="modal" aria-label="Close">
					<span aria-hidden="true">&times;</span>
				</button>
			</div>
			<div class="card-body">
				<div class="tab-content" id="pills-tabContent">
					<div class="tab-pane fade show active" id="pills-home" role="tabpanel" aria-labelledby="pills-home">
						<div id="rdvFormStep1">
							<h6>Etape 1/3 : Vos coordonnées</h6>
							<hr>
							{{ form_row(form2.email) }}
							{{ form_row(form2.name) }}
							{{ form_row(form2.subject) }}
							{{ form_row(form2.policy)|replace({'[link]': '<a class="text-primary" target="blank" href="'~ path('policy')~'">', '[/link]': '</a>'})|raw }}
						</div>
						<a class="btn btn-info float-right tab-btn my-3" id="nextbtn" role="tablist">Suivant</a>
					</div>

					<div class="tab-pane fade" id="pills-slots" role="tabpanel" aria-labelledby="pills-slots">
						<h6>Etape 2/3 : Vos disponibiliés</h6>
						<hr>
						<p class="text-center">
							<span class="iconify text-primary" data-icon="ant-design:info-circle-outlined" data-inline="true"></span>
							Vous pouvez choisir jusqu'à 3 créneaux</p>
						<ul class="nav nav-tabs" id="myTab" role="tablist">
							<li class="nav-item" role="presentation">
								<a class="nav-link text-grey active p-2" id="slot1-tab" data-toggle="tab" href="#slot1" aria-controls="slot1">Créneau 1</a>
							</li>
							<li class="nav-item" role="presentation">
								<a class="nav-link text-grey p-2" id="slot2-tab" data-toggle="tab" href="#slot2" aria-controls="slot2">Créneau 2</a>
							</li>
							<li class="nav-item" role="presentation">
								<a class="nav-link text-grey p-2" id="slot3-tab" data-toggle="tab" href="#slot3" aria-controls="slot3">Créneau 3</a>
							</li>
						</ul>
						<div class="tab-content my-4" id="myTabContent">
							{% include 'partials/rdv_slots.html.twig' %}
							<a class="btn btn-dark tab-btn float-left my-3" href="#pills-home">Précédent</a>
							<a class="btn btn-info tab-btn float-right my-3" href="#pills-message">Suivant</a>
						</div>
					</div>

					<div class="tab-pane fade" id="pills-message" role="tabpanel" aria-labelledby="pills-message">
						<h6>Etape 3/3 : Recap</h6>
						<hr>
						<p>Vos choix :
						</p>
						<div id="rdv_no_choice" class="form-control">Aucun créneau sélectionné</div>
						{{ form_row(form2.slot1) }}
						{{ form_row(form2.slot2) }}
						{{ form_row(form2.slot3) }}
						{{ form_row(form2.message) }}
						<a class="btn btn-dark tab-btn float-left my-3" href="#pills-slots">Précédent</a>
						<button type="submit" class="btn btn-primary float-right my-3">Confirmer</button>
					</div>
				</div>
			</div>
			{{ form_end(form2) }}
		</div>
	</div>
</div>
