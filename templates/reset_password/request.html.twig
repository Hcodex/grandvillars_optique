{% extends 'admin/base.html.twig' %}

{% block title %}Réinitialisation de mot de passe
{% endblock %}

{% block body %}
	<main data-spy="scroll" data-target="#navbar" data-offset="0">
		<h1 class="mt-5 pt-5 text-center">Réinitialisation de mot de passe</h1>
		<section>
			<div class="container my-5">

				{% for flashError in app.flashes('reset_password_error') %}
					<div class="alert alert-danger" role="alert">{{ flashError }}</div>
				{% endfor %}

				{{ form_start(requestForm) }}
				{{ form_row(requestForm.email) }}
				<div>
					<small>
						Renseigner votre adresse mail de connexion pour recevoir un lien permettant de réinitialiser votre mot de passe
					</small>
				</div>

				<button class="btn btn-primary">Demander le lien de réinitilaisation</button>
				{{ form_end(requestForm) }}
			</div>
		</section>
	</main>
{% endblock %}
